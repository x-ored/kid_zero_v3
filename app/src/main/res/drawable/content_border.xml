<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?colorControlHighlight">

    <item>
        <shape android:shape="rectangle">

            <solid android:color="@color/white" />

            <stroke
                android:width="1dp"
                android:color="#DDDDDD" />
