<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KidZero" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/light_purple</item>
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryVariant">@color/light_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.KidZero.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KidZero.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KidZero.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RoundImage">
        <item name="cornerSize">30%</item>
    </style>

    <style name="CircleRoundImg">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">40dp</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>